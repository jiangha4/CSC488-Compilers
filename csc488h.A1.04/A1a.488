begin
    % Get a number from user
    integer a, b
    put "Enter one number:", skip
    get a
	
	% Define an integer constant
    b <= 3
    put skip

    % Arithmetic operators
    put "Arithmetic", skip
    put "------------------", skip
    put "Unary minus:    ",    -a, skip
    put "Addition:       ", a + b, skip
    put "Subtraction:    ", a - b, skip
    put "Multiplication: ", a * b, skip
    put "Division:       ", a / b, skip
    put skip

    % Logical operators
    put "Logical", skip
    put "------------------", skip
    if !false then
        put "Not False = True", skip
    end
    if true & true then
        put "True and True = True", skip
    end
    if true | false then
        put "True or False = True", skip
    end
    put skip

    % Comparison operators
    put "Comparison", skip
    put "------------------", skip
    if a = b then
        put "A == B", skip
    end
    if a != b then
        put "A != B", skip
    end
    if a < b then
        put "A < B", skip
    end
    if a <= b then
        put "A <= B", skip
    end
    if a > b then
        put "A > B", skip
    end
    if a >= b then
        put "A >= B", skip
    end
end

begin
    integer x, y
    boolean a, b
    a <= true
    b <= false

    % Get two integer values from user
    put "Enter first number:", skip
    get x
    put "Enter second number:", skip
    get y
    put skip

    % Arithmetic operators
    put "Arithmetic operators", skip
    put "Unary minus (-", x, "): ", -x, skip
    put "Unary minus (-", y, "): ", -y, skip
    put "Addition (", x, " + ", y, "): ", x + y, skip
    put "Subtraction (", x, " - ", y, "): ", x - y, skip
    put "Multiplication (", x, " * ", y, "): ", x * y, skip
    if y != 0 then
        put "Division (", x, " / ", y, "): ", x / y, skip
    else
        put "Division by zero is undefined"
    end
    put skip

    % Logical operators
    put "Logical operators", skip
    put "Define: a = true, b = false", skip
    if !a then
        put "!a is true", skip
    end
    if a & b then
        put "a & b is true", skip
    end
    if a | b then
        put "a | b is true", skip
    end
    put skip

    % Comparison operators
    put "Comparison operators", skip
    if x = y then
        put x, " = ", y, skip
    end
    if x != y then
        put x, " != ", y, skip
    end
    if x < y then
        put x, " < ", y, skip
    end
    if x <= y then
        put x, " <= ", y, skip
    end
    if x > y then
        put x, " > ", y, skip
    end
    if x >= y then
        put x, " >= ", y, skip
    end
    put skip
end
